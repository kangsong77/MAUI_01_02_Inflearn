<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_01_02_Inflearn.Views.ListViewPage"
             Title="ListViewPage">
    <!-- ch_16_리스트뷰 -->
    <ListView x:Name="lst" ItemSelected="lst_ItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}" />
                        <Label Text="{Binding Age}" />
                    </VerticalStackLayout>
                </ViewCell>
            </DataTemplate>   
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>